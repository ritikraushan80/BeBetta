<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingStart="15dp"
    android:paddingEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@drawable/score_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/country_image"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:src="@drawable/espanyol"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/country_name"
            app:layout_constraintStart_toStartOf="@+id/country_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/inter_reg"
            android:text="Espanyol"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_image" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/rajdhani_medium"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/country_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_name" />


        <TextView
            android:id="@+id/vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="VS"
            android:textColor="#80EAEAEA"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/country_image"
            app:layout_constraintEnd_toStartOf="@+id/op_country_image"
            app:layout_constraintStart_toEndOf="@+id/country_image"
            app:layout_constraintTop_toTopOf="@+id/country_image" />


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="72 min"
            android:textColor="#FFB800"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/score"
            app:layout_constraintEnd_toStartOf="@+id/op_score"
            app:layout_constraintStart_toEndOf="@+id/score"
            app:layout_constraintTop_toBottomOf="@+id/country_name" />


        <ImageView
            android:id="@+id/op_country_image"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:src="@drawable/alt_madrid"
            app:layout_constraintEnd_toEndOf="@+id/op_country_name"
            app:layout_constraintStart_toStartOf="@+id/op_country_name"
            app:layout_constraintTop_toTopOf="@+id/country_image" />

        <TextView
            android:id="@+id/op_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/inter_reg"
            android:text="Alt. Madrid"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_margin="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_image" />

        <TextView
            android:id="@+id/op_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/rajdhani_medium"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/op_country_name"
            app:layout_constraintStart_toStartOf="@+id/op_country_name"
            app:layout_constraintTop_toBottomOf="@+id/op_country_name" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_bet_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inside_btn_background"
            app:backgroundTint="#33EEEEEE"
            android:text="BET NOW"
            android:textSize="17sp"
            android:fontFamily="@font/rajdhani_medium"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>